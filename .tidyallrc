[PerlCritic]
argv = --profile $ROOT/.perlcriticrc --program-extensions .pl
select = **/*.{pl,pm}
ignore = lib/IPMS/Loader/Schema/**/*.pm

[PerlTidy]
diff_on_tidy_error = 1
select = **/*.{pl,pm,t}
ignore = lib/IPMS/Loader/Schema/**/*.pm

[PodSpell]
select = **/*.{pm,pod}
ispell_argv = -p $ROOT/.project_dictionary
ignore = lib/IPMS/Loader/Schema/**/*.pm

[SortLines]
diff_on_tidy_error = 1
select = .gitignore

[SortLines::Naturally]
diff_on_tidy_error = 1
select = .project_dictionary
